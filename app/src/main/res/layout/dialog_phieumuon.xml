<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/cus_bgr_dialog"
    app:cardCornerRadius="15dp"
    android:layout_margin="20dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_title"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm Phiếu Mượn"
            android:fontFamily="@font/lobster_regular"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp"
            android:textColor="@color/red_A400"
            android:textStyle="bold"
            android:paddingVertical="3dp"/>
        <TextView
            android:layout_marginHorizontal="12dp"
            android:clickable="false"
            android:focusable="false"
            android:textIsSelectable="false"
            android:contextClickable="false"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:id="@+id/edt_maPM"
            android:padding="12dp"
            android:hint="Mã PM:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cus_bgr_edt"/>
        <RelativeLayout
            android:layout_marginHorizontal="12dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_d9d"/>
        <Spinner
            android:background="#00000000"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="12dp"
            android:id="@+id/spinner_thanhvien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Spinner
            android:background="#00000000"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="12dp"
            android:id="@+id/spinner_sach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:clickable="false"
            android:focusable="false"
            android:textIsSelectable="false"
            android:contextClickable="false"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="24dp"
            android:id="@+id/edt_ngay"
            android:padding="12dp"
            android:hint="Ngày:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cus_bgr_edt"/>
        <RelativeLayout
            android:layout_marginHorizontal="12dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_d9d"/>
        <TextView
            android:clickable="false"
            android:focusable="false"
            android:textIsSelectable="false"
            android:contextClickable="false"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="24dp"
            android:id="@+id/edt_tienThue"
            android:padding="12dp"
            android:hint="Tiền thuê:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cus_bgr_edt"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginHorizontal="12dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_d9d"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trạng thái:"/>
            <CheckBox
                android:textColor="@color/red_A400"
                android:layout_marginHorizontal="5dp"
                android:layout_centerVertical="true"
                android:button="@drawable/cus_checkbox_status"
                android:id="@+id/chk_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chưa trả sách"
                android:layout_gravity="left"
                android:paddingLeft="2dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                android:textStyle="bold"
                android:backgroundTint="@color/red_A400"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"
                android:text="Hủy"/>
            <Button
                android:id="@+id/btn_save"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="@color/green_A400"
                android:layout_width="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lưu"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>