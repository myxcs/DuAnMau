<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:layout_margin="20dp"
    android:background="@drawable/cus_bgr_dialog"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm Sách"
            android:fontFamily="@font/lobster_regular"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp"
            android:textColor="@color/red_A400"
            android:textStyle="bold"
            android:paddingVertical="3dp"/>
        <EditText
            android:layout_marginHorizontal="12dp"
            android:clickable="false"
            android:focusable="false"
            android:textIsSelectable="false"
            android:contextClickable="false"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:id="@+id/edt_maSach"
            android:padding="12dp"
            android:hint="Mã Sách:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cus_bgr_edt"/>
        <RelativeLayout
            android:layout_marginHorizontal="12dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_d9d"/>
        <EditText
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="24dp"
            android:id="@+id/edt_tenSach"
            android:padding="12dp"
            android:hint="Tên Sách . . ."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cus_bgr_edt"/>
        <RelativeLayout
            android:layout_marginHorizontal="12dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_d9d"/>
        <EditText
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="24dp"
            android:id="@+id/edt_giaThue"
            android:padding="12dp"
            android:hint="Giá thuê . . ."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cus_bgr_edt"/>

        <EditText
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="24dp"
            android:id="@+id/edt_namXuatBan"
            android:padding="12dp"
            android:hint="Năm xuất bản . . ."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cus_bgr_edt"/>
        <RelativeLayout
            android:layout_marginHorizontal="12dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_d9d"/>
        <Spinner
            android:background="#00000000"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="12dp"
            android:id="@+id/spinner_loaiSach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_cancel"
                android:textStyle="bold"
                android:backgroundTint="@color/red_A400"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"
                android:text="Hủy"/>
            <Button
                android:id="@+id/btn_save"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="@color/green_A400"
                android:layout_width="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lưu"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>