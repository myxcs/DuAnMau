<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/cus_bgr_dialog"
    app:cardCornerRadius="15dp"
    android:layout_margin="20dp"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm Thành Viên"
        android:fontFamily="@font/lobster_regular"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:textColor="@color/red_A400"
        android:textStyle="bold"
        android:paddingVertical="3dp"/>

    <EditText
        android:id="@+id/edt_maTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/cus_bgr_edt"
        android:clickable="false"
        android:contextClickable="false"
        android:focusable="false"
        android:hint="Mã thành viên: 01"
        android:padding="12dp"
        android:textIsSelectable="false"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="12dp"
        android:background="@color/gray_d9d" />

    <EditText
        android:id="@+id/edt_hoten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/cus_bgr_edt"
        android:hint="Tên họ tên . . ."
        android:padding="12dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="12dp"
        android:background="@color/gray_d9d" />

    <EditText
        android:id="@+id/edt_namsinh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/cus_bgr_edt"
        android:hint="Nhập năm sinh . . "
        android:inputType="number"
        android:padding="12dp" />

    <EditText
        android:id="@+id/edt_cccd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/cus_bgr_edt"
        android:hint="Nhập cccd . . "
        android:inputType="number"
        android:padding="12dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="12dp"
        android:background="@color/gray_d9d" />

    <EditText
        android:id="@+id/edt_cancuoccd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/cus_bgr_edt"
        android:hint="Nhập Căn Cước Công Dân . . "
        android:inputType="number"
        android:padding="12dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="12dp"
        android:background="@color/gray_d9d" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:textStyle="bold"
            android:backgroundTint="@color/red_A400"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:text="Hủy"/>

        <Button
            android:id="@+id/btn_save"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/green_A400"
            android:layout_width="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lưu"/>
    </LinearLayout>


</LinearLayout>

</androidx.cardview.widget.CardView>