<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    tools:context=".Fragment.DoiMatKhauFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:gravity="center|top"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_marginTop="30dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/password"/>
        <EditText
            android:inputType="textPassword"
            android:id="@+id/edt_oldpassword"
            android:layout_marginTop="60dp"
            android:padding="12dp"
            android:hint="Mật khẩu cũ . . ."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cus_bgr_edt"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_d9d"/>
        <EditText
            android:inputType="textPassword"
            android:id="@+id/edt_newpassword"
            android:layout_marginTop="24dp"
            android:padding="12dp"
            android:hint="Mật khẩu mới . . ."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cus_bgr_edt"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_d9d"/>
        <EditText
            android:inputType="textPassword"
            android:id="@+id/edt_enterthepassword"
            android:layout_marginTop="24dp"
            android:padding="12dp"
            android:hint="Nhập lại mật khẩu . . ."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cus_bgr_edt"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_d9d"/>
        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_cancel"
                android:textStyle="bold"
                android:backgroundTint="@color/red_A400"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"
                android:text="Đặt Lại"/>
            <Button
                android:id="@+id/btn_save"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="@color/green_A400"
                android:layout_width="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lưu"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>